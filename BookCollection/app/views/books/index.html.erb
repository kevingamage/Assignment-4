<% @page_title = 'Home Page' %>

<div class="index">
  <div class="page">
    <h1>Home Page</h1>
  </div>

  <table>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Publish Date</th>
      <th>Actions</th>
    </tr>

    <% @books.each do |book| %>
    <tr>
      <td> <%= book.title %> </td>
      <td> <%= book.author %> </td>
      <td> <%= book.genre %> </td>
      <td> <%= number_to_currency(book.price) %> </td>
      <td> <%= book.publish_date %> </td>
      <td class="actions">
        <%= link_to('Details', book_path(book.id), :class => 'action show') %>
        <%= link_to('Edit', edit_book_path(book.id) , :class => 'action edit') %>
        <%= link_to('Delete', delete_book_path(book.id) , :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>

  <div class="new action">
    <%= link_to('Add a book', new_book_path, :class => 'action new') %>
  </div>
</div>
